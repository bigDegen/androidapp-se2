<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main_act">

    <TextView
            android:text="Samuel's Project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtHeader"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="44dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="136dp" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:textAllCaps="false"/>
    <EditText
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/matNo"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btnFetchNumber" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp" app:layout_constraintTop_toBottomOf="@+id/txtHeader"
            app:layout_constraintVertical_bias="1.0" android:minHeight="48dp" tools:ignore="SpeakableTextPresentCheck"/>
    <Button
            android:text="Get Number"
            android:layout_width="210dp"
            android:layout_height="48dp" android:id="@+id/btnFetchNumber"
            app:backgroundTint="#000000" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="264dp"/>
    <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content" android:id="@+id/txtOutput"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toBottomOf="@+id/btnFetchNumber" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>