<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="Samuel's Project"
            android:layout_width="373dp"
            android:layout_height="41dp" android:id="@+id/txtHeader"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:textAllCaps="false"/>
    <EditText
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/matNo"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btnFetchNumber" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp" app:layout_constraintTop_toBottomOf="@+id/txtHeader"
            app:layout_constraintVertical_bias="1.0" android:minHeight="48dp" tools:ignore="SpeakableTextPresentCheck"/>
    <Button
            android:text="GET Information"
            android:layout_width="210dp"
            android:layout_height="48dp" android:id="@+id/btnFetchNumber"
            app:backgroundTint="#000000" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="96dp"/>
    <Button
            android:text="GET common divisor"
            android:layout_width="210dp"
            android:layout_height="48dp" android:id="@+id/btnCalcDivisor"
            app:backgroundTint="#000000" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="36dp"/>
    <TextView
            android:layout_width="300dp"
            android:layout_height="200dp" android:id="@+id/txtOutput"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp" app:layout_constraintTop_toBottomOf="@+id/txtHeader"
            android:layout_marginTop="36dp" app:drawableTint="#35FF05"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
    <TextView
            android:text="Please enter your Matrikelnumber"
            android:gravity="center"
            android:layout_width="217dp"
            android:layout_height="32dp" android:id="@+id/txtInfoMatNo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="96dp"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toTopOf="@+id/matNo"
            app:layout_constraintHorizontal_bias="0.01" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtOutput" app:layout_constraintVertical_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>